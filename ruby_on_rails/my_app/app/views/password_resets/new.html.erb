<% provide(:title, "Log in") %>
<div class="pt-5">
  <h1>Log in</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with(url: password_resets_path, scope: :password_resets, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.submit "Reset password", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
